@model IEnumerable<FireDrink.Models.PEDIDO>
@{
    ViewBag.Title = "MisPedidos";
}

<div class="well">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="text-muted">Mis Pedidos</h1>
        </div>
        <div class="panel-body">
            <div class="table-responsives">
                <table class="table table-striped">
                    <thead class="thead">
                        <tr>
                            <th style="width: 10px">Codigo</th>
                            <th>Cont.Nombre</th>
                            <th>Cont.Email</th>
                            <th>Cont.Movil</th>
                            <th>Fecha Pedido</th>
                            <th>Fecha Entrega</th>
                            <th>Urb.</th>
                            <th>Referencia</th>
                            <th>Total</th>
                            <th>Distrito</th>
                            <th>Comp.Pago</th>
                            <th>Medio Pago</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @Html.DisplayFor(modelItem => item.idpedido)</td>
                                <td> @Html.DisplayFor(modelItem => item.contacto_nom)  @Html.DisplayFor(modelItem => item.contacto_ape)</td>
                                <td> @Html.DisplayFor(modelItem => item.contacto_mail)</td>
                                <td> @Html.DisplayFor(modelItem => item.contacto_movil)</td>
                                <td> @Html.DisplayFor(modelItem => item.fechaPedido)</td>
                                <td> @Html.DisplayFor(modelItem => item.fechaentrega)</td>
                                <td> @Html.DisplayFor(modelItem => item.entrega_urba)</td>
                                <td> @Html.DisplayFor(modelItem => item.entrega_ref)</td>
                                <td> @Html.DisplayFor(modelItem => item.totalpedido)</td>
                                <td> @Html.DisplayFor(modelItem => item.UBIGEO.DISTRITO)</td>
                                <td> @Html.DisplayFor(modelItem => item.tipo_compPago.descrip)</td>
                                <td> @Html.DisplayFor(modelItem => item.TIPO_PAGO.descrip)</td>
                                <td>
                                    <span class="label label-default">
                                        @Html.DisplayFor(modelItem => item.estado.descrip)
                                    </span>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>

        </div>
    </div>
    
</div>