@model FireDrink.Models.PRODUCTO

@{
    ViewBag.Title = "Registrar Producto";
}

<div class="well">
    <ol class="breadcrumb">
        <li><a href="~/Producto/">Productos</a></li>
        <li class="text-muted">Registrar</li>
    </ol>
</div>

<div class="well">
    <div class="col-sm-6 col-sm-offset-3">
        <h2>Nuevo Producto</h2>
        @using (Html.BeginForm("Create", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="form-group">
                <label>Categoria</label>
                @Html.DropDownList("COD_TIPO", (IEnumerable<SelectListItem>)ViewBag.Categorias, "Seleccione Categoria", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.COD_TIPO)
            </div>

            <div class="form-group">
                <label>Marca</label>
                @Html.DropDownList("COD_MARCA", (IEnumerable<SelectListItem>)ViewBag.Marcas, "Seleccione Marca", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.COD_MARCA)
            </div>

            <div class="form-group">
                <label>Descripcion de Producto</label>
                @Html.TextBoxFor(model => model.DES_PRO, new { @class = "form-control", @required = true })
                @Html.ValidationMessageFor(model => model.DES_PRO)
            </div>

            <div class="form-group">
                <label>Precio de Producto</label>
                @Html.TextBoxFor(model => model.PRE_PRO, new { @class = "form-control", @required = true })
                @Html.ValidationMessageFor(model => model.PRE_PRO)
            </div>

            <div class="form-group">
                <label>Imagen de Producto:</label>
                <input type="file" name="archivo" required />
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Registrar Producto" />
                <a href="@Url.Action("Index","Producto")" class="btn btn-primary">Retornar al Listado</a>
            </div>
        }
    </div>
    <div class="clearfix"></div>
</div>