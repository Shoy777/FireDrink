@model FireDrink.Models.PEDIDO
@{
    ViewBag.Title = "Pedido";
}
<div class="well">
    <ul class="btn-group">
        <li class="btn btn-default"><span><em>01.</em> Resumen</span></li>
        <li class="btn btn-default"><span><em>02.</em> Iniciar sesión</span></li>
        <li class="btn btn-default"><span><em>03.</em> Pedido</span></li>
        <li class="btn btn-success"><span><em>04.</em> Pago</span></li>
        <li class="btn btn-default"><span><em>05.</em> Completo</span></li>
    </ul>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="page-heading">Registro de pago</h1>
        </div>
        <div class="panel-body">
            <form action="#">
                <div class="col-sm-6">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="">Nombre</label>
                            <input value="" type="text" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="">Apellido</label>
                            <input value="" type="text" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="">Numero de Tarjeta</label>
                            <input value="" type="text" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="">Codigo de Seguridad</label>
                            <input value="" type="text" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="">Mes</label>
                            <input value="" type="text" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="">Año</label>
                            <input value="" type="text" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <img alt="imagen" height="180" width="200" src="http://i.imgur.com/NKOfsov.jpg" />
                </div>
            </form>
        </div>
    </div>

    <div class="form-group">
        <form action="Pago" method="post">
            <input type="hidden" value="@Model.contacto_nom" id="contacto_nom" name="contacto_nom" />
            <input type="hidden" value="@Model.contacto_ape" id="contacto_ape" name="contacto_ape" />
            <input type="hidden" value="@Model.contacto_mail" id="contacto_mail" name="contacto_mail" />
            <input type="hidden" value="@Model.contacto_movil" id="contacto_movil" name="contacto_movil" />
            <input type="hidden" value="@Model.idtipo_compPago" id="idtipo_compPago" name="idtipo_compPago" />
            <input type="hidden" value="@Model.fechaentrega" id="fechaentrega" name="fechaentrega" />
            <input type="hidden" value="@Model.ruc" id="ruc" name="ruc" />
            <input type="hidden" value="@Model.razonsocial" id="razonsocial" name="razonsocial" />
            <input type="hidden" value="@Model.entrega_dir" id="entrega_dir" name="entrega_dir" />
            <input type="hidden" value="@Model.entrega_urba" id="entrega_urba" name="entrega_urba" />
            <input type="hidden" value="@Model.iddistrito" id="iddistrito" name="iddistrito" />
            <input type="hidden" value="@Model.entrega_ref" id="entrega_ref" name="entrega_ref" />
            <input type="hidden" value="1" id="idtipopago" name="idtipopago" />
            <input type="hidden" value="@Model.notas" id="notas" name="notas" />
            <input type="hidden" value="@Model.idestado" id="idestado" name="idestado" />
            <input type="hidden" value="@Model.idCliente" id="idCliente" name="idCliente" />
            <input type="hidden" value="@Model.fechaPedido" id="fechaPedido" name="fechaPedido" />
            <div class="form-group">
                <button type="submit" class="btn btn-default">
                    <span>Pagar<i class="icon-chevron-right right"></i></span>
                </button>
            </div>
        </form>
    </div>
    <div class="clearfix"></div>
</div>
<script>
    function cambiaidPago(id) {
        $("#idtipopago").val(id);
    }
</script>